<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:id="@+id/slot_status"  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/status"
    />
    
    <Button android:id="@+id/btn_pickup_action" 
    android:text="@string/pickup_bike_action" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content"
    android:layout_centerHorizontal="true"
    android:onClick="doPickupBikeAction" />
    
    <Button android:id="@+id/btn_dropoff_action" 
    android:text="@string/dropoff_bike_action" 
    android:layout_height="wrap_content" 
    android:layout_width="wrap_content"
    android:layout_centerHorizontal="true"
    android:onClick="doDropoffBikeAction" />
    
    
</LinearLayout>
